Q 3 K8s sequrity 

apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: analytics-engine
spec:
  selector:
    matchLabels:
      app:  analytics-engin  # has to match .spec.template.metadata.labels
  serviceName: "headless"
  replicas: 3 # by default is 1
  minReadySeconds: 10 # by default is 0
  template:
    metadata:
      labels:
        app: analytics-engin # has to match .spec.selector.matchLabels
    spec:
      terminationGracePeriodSeconds: 10
      containers:
      - name: main-container
        image: ubuntu
        command:
          - sh
          - -c
          - |
            while true; do 
             echo "$(date "+%y-%m-%d %H:%M:%S") Process running">>/var/data/process.log
             echo "$(date "+%y-%m-%d %H:%M:%S") Log entry">>/var/log/app.log
             sleep 15
            done

        volumeMounts:
        - name: data-volume
          mountPath: /var/data
        - name: logs-volume
          mountPath: /var/log
  
      - name: log-sidecar
        image: busybox
        command:
          - sh
          - -c
          - |
            while true; do
             tail -f /var/log/app.log
             sleep 15
            done

        volumeMounts:
        - name: logs-volume
          mountPath: /var/log

  volumeClaimTemplates:
  - metadata:
      name: data-volume
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 1Gi
  - metadata:
      name: logs-volume
    spec:
      accessModes: [ "ReadWriteOnce" ]
      resources:
        requests:
          storage: 1Gi
